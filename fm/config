map gg exec surf https://chatgpt.html
map ll exec sudo -u batan bash /home/$USER/.config/i3/launcher/launcher.sh
map pp exec pulsemixer
map tt exec thunar
map nn exec xfce4-terminal --geometry 160x40-200-200 -e "vim -O2 /home/$USER/.task/notes/note.'$(( $(ls /home/$USER/.task/notes/note*|wc -l) + 1 ))'.wiki /home/$USER/.task/notes/note.wiki -c ':terminal'"
map a1 exec rm -f /home/$USER/.config/lc-clipboard/register1 >/dev/null 2>&1 && xclip -o >> /home/$USER/.config/lc-clipboard/register1 && tput cup 16 0  echo -e "    $C⟦$H register1 : $C⟧   $F❨$E$D $(cat /home/$USER/.config/lc-clipboard/register1|cut -c1-48) $N"; lcfmbottom1; lcfmbottom2
