#{{{ >>>   Custom Key Mapping >#25
map aa exec alacritty &
map er exec xfce4-terminal -e "vim /home/$USER/.config/lc-fm/config"
map xx exec echo "xxxxx"
map dd exec killall firefox 2>/dev/null & killall firefox-bin 2>/dev/null & firefox && browser-history |sed 's!.*http!http!g'|sed 's![,].*$!!g' >> /home/$USER/.config/lists/firefox-history.md 
