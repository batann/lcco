#!/bin/bash

echo -e "\033[2A\033[2K\n\033[2K\033[2A\033[36m┌────────────────────────────────────────────────────────────────\033[0m"
echo -e "\033[36m│\033[1;36m⟦\033[1;37;44mPID    \033[;1;36m⟧───⟦\033[1;37;44mCPU   \033[0;1;36m⟧───⟦\033[1;37;44m%Mem    \033[0;1;36m⟧───⟦\033[1;37;44mCommand                   \033[0;1;36m⟧"
ps -Ao pid,%cpu,%mem,comm --sort=-%cpu|head -n10|sed -n '2,7p'|awk '{print "\033[0;36m│\033[1;36m⟦\033[1;92;40m       \033[3G"$1"\033[10G\033[0;36m⟧───⟦\033[1;92;40m         \033[15G "$2"\033[21G\033[0;36m⟧───⟦\033[1;92;40m        \033[26G\033[1;32m% "$3"\033[34G\033[0;36m⟧───⟦\033[1;92;40m                          \033[39G"$4"\033[65G\033[0;36m⟧\033[0m"$5}'




